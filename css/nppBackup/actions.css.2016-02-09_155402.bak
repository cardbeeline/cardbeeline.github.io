.content-block.common{width:100% !important; padding-bottom:0; margin-bottom:0}

img { margin: 0px; padding: 0px; border: 0px; outline: 0px; font-weight: normal; vertical-align: baseline; font-size: 100%; background: transparent; }
a { margin: 0px; padding: 0px; font-size: 100%; vertical-align: baseline; background: transparent; }

.cardmenu {width:48px; z-index:1006; text-align: right;}
.sharemenu { margin-bottom : 5px !important}
.sharemenu .hidden{display:none !important}
.sharemenu .active{ display:block }
#facebook {background-color: #3b5998; color: rgb(255, 255, 255)}
#twitter {background-color: #3b5998; color: rgb(255, 255, 255)}

.content-block{color:#282828}
.chew-row { display: flex; flex-wrap: wrap; letter-spacing: -0.31em; text-rendering: optimizeSpeed; list-style: none; padding: 0px; margin: 0px; }
.chew-cell { flex: 1 0 auto; vertical-align: top; zoom: 1; letter-spacing: normal; text-rendering: auto; display: flex; box-sizing: border-box; padding: 0px; width: auto; min-width: 200px; }
.chew-card { flex: 1 1 auto; display: block; margin: 0px auto; }
.chew-cell.chew-cell--ghost {  visibility: hidden; height: 0; padding: 0;}
.card { box-shadow: #9d9cab 0px 15px 10px -13px; }
strong { font-weight: bold; }
ul, p{line-height:1.462; font-size:100%}

.onlineActions .chew-cell { padding: 0.5em; width: 33%; min-width: 240px; }
.card { margin: 1%; border-radius: 5px; min-height: 50px; width: 98%; position: relative; background-color: #fff; padding-bottom: 60px; }

.beecard_panel_button { display: block; height: 30px; width: 100%; padding: 15px 0px; text-align: center; position: absolute; bottom: 0px; }
.mainContainer { margin:0 auto; width: 100%; display:block; max-width: 1200px; }

